{
  "id": "com.gruijter.rock",
  "name": {
    "en": "Rock Paper Scissors",
    "nl": "Steen Papier Schaar"
  },
	"description": {
		"en": "Rock Paper Scissors game",
		"nl": "Steen Papier Schaar spel"
	},
  "tags": {
    "en": [ "game", "play" ],
    "nl": [ "spel", "spelletje" ]
  },
  "category": ["internet","tools"],
  "version": "2.0.0",
	"sdk": 2,
  "compatibility": ">= 1.5",
  "author": {
      "name": "Robin de Gruijter",
      "email": "gruijter@hotmail.com"
  },
  "copyright": "Chiel de Gruijter (chieldegruijter@hotmail.com)",
  "license": " GPL-3.0-or-later",
  "contributing": {
    "donate": {
      "paypal": {
        "username": "gruijter"
      }
    }
  },
  "contributors": {
    "developers": [
      {
        "name": "Chiel de Gruijter",
        "email": "chieldegruijter@hotmail.com"
      },
			{
		      "name": "Robin de Gruijter",
		      "email": "gruijter@hotmail.com"
		  }
    ]
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "speech": {
    "en": {
      "element": {
        "rock": {
          "type": "string",
          "value": "rock"
        },
        "paper": {
          "type": "string",
          "value": "paper"
        },
        "scissors": {
          "type": "string",
          "value": "scissors"
        },
        "play": {
          "type": "string",
          "value": "play"
        }
      },
      "group": {
        "main": {
          "set": "(rock) && paper && scissors && (play)",
          "ordered": false,
          "allowDisconnect": false,
          "capturingGroup": true
        }
      }
    },
    "nl": {
      "element": {
        "rock": {
          "type": "string",
          "value": "steen"
        },
        "paper": {
          "type": "string",
          "value": "papier"
        },
        "scissors": {
          "type": "string",
          "value": "schaar"
        },
        "play": {
          "type": "string",
          "value": "spelen"
        }
      },
      "group": {
        "main": {
          "set": "(rock) && paper && scissors && (play)",
          "ordered": false,
          "allowDisconnect": false,
          "capturingGroup": true
        }
      }
    }
  },
	"speechExamples": {
		"en": [ "Rock paper scissors", "Play rock paper scissors" ],
		"nl": [ "Steen papier schaar", "Speel steen papier schaar" ]
	},
	"permissions": [
			"homey:manager:speech-output",
			"homey:manager:speech-input"
	]
}
